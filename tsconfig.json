{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@pproenca/node-webcodecs": ["./lib"],
      "@pproenca/node-webcodecs/*": ["./lib/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["lib/**/*.ts", "scripts/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", ".spec-cache", "build"]
}
