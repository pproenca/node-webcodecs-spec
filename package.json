{
  "name": "@pproenca/node-webcodecs",
  "version": "0.0.1-alpha",
  "description": "Server-side WebCodecs implementation for Node.js backed by FFmpeg",
  "main": "dist/lib/index.js",
  "types": "dist/types/webcodecs.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/webcodecs.d.ts",
      "default": "./dist/lib/index.js"
    },
    "./types": {
      "types": "./dist/types/webcodecs.d.ts"
    }
  },
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-build",
    "scaffold": "tsx scripts/scaffold-project.ts",
    "generate:types": "webidl2ts -i spec/context/_webcodecs.idl -o types/webcodecs.d.ts",
    "generate:tasks": "tsx scripts/generate-tasks.ts",
    "build:native": "node-gyp rebuild",
    "build": "npm run build:native && tsc && mkdir -p dist/types && cp types/webcodecs.d.ts dist/types/",
    "clean": "node-gyp clean && rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "vitest"
  },
  "gypfile": true,
  "binary": {
    "module_name": "webcodecs",
    "module_path": "./build/Release/",
    "remote_path": "./releases/download/{version}/",
    "package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}.tar.gz",
    "host": "https://github.com/pproenca/node-webcodecs-spec"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.11",
    "bindings": "^1.5.0",
    "node-addon-api": "^8.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.0",
    "@types/turndown": "^5.0.4",
    "jsdom": "^24.0.0",
    "node-gyp": "^10.0.0",
    "tsx": "^4.7.0",
    "turndown": "^7.1.3",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "webidl2": "^24.4.0",
    "webidl2ts": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "webcodecs",
    "video",
    "codec",
    "ffmpeg",
    "napi",
    "native"
  ],
  "license": "MIT"
}
